<%= form_for(@user, :url => { :action => 'trylogin' }) do |f| %>

  <div class="field">
    <% @user.errors[:email].each do |e| %>
    <p class="error"><%= e %></p>
    <% end %>
    <p><%= f.text_field :email, :placeholder => 'Email' %></p>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
  
<% end %>